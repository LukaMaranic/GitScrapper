{% extends 'base.html.twig' %}

{% block title %}
    <div class="container mt-5 text-center">
        <h1 class="display-4 margin-bottom">Login</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
{#                    <div class="card-header">#}
{#                        <h2 class="text-center">Login</h2>#}
{#                    </div>#}
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form action="{{ path('app_login') }}" method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label">Email:</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" id="password" name="_password" class="form-control" required>
                            </div>

                            {# If you want to control the URL the user is redirected to on success
                            <input type="hidden" name="_target_path" value="/account"> #}

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                            <div class="mt-3 text-center">
                                <a href="{{ path('app_register') }}">Register</a> | <a href="#">Forgot Password</a>
                                {#                            <a href="{{ path('app_register') }}">Register</a> | <a href="{{ path('app_forgot_password') }}">Forgot Password</a>#}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
