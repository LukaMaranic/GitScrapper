{% extends "base.html.twig" %}

{% block title %}
    <div class="container mt-5 text-center">
        <h1 class="display-4 margin-bottom"> {{ data.repositoryTitle }}</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-5 text-center">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="commits-link">Commits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="branches-link">Branches</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="pull-requests-link">Pull Requests</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="container mt-5" id="commits" style="display: none">
            <h2>Commits</h2>
            <ul class="list-group">
                {% for commit in commits %}
                    <li class="list-group-item">
                        <div class="commit-info">
                            <strong>{{ commit.commit.author.name }}</strong> - {{ commit.commit.message }}
                        </div>
                    </li>
                {% endfor %}

            </ul>
        </div>

        <div class="container mt-5" id="branches" style="display: none">
            <h2>Branches</h2>
            <ul class="list-group">
                {% for branch in branches %}
                    <li class="list-group-item">
                        <div class="branch-info">
                            <strong>{{ branch.name }}</strong>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="container mt-5" id="pull-requests" style="display: none">
            <h2>Pull Requests</h2>
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>Plain Text</strong> - bodyPlaceholder
                </li>
                <!-- Add more pull requests as needed -->
            </ul>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#commits-link").click(function () {
                $("#commits").show();
                $("#branches, #pull-requests").hide();
            });

            $("#branches-link").click(function () {
                $("#branches").show();
                $("#commits, #pull-requests").hide();
            });

            $("#pull-requests-link").click(function () {
                $("#pull-requests").show();
                $("#commits, #branches").hide();
            });
        });
    </script>
{% endblock %}
