{% extends "base.html.twig" %}

{% block title %}
    <div class="container mt-5 text-center">
        <h1 class="display-4 margin-bottom">Repositories</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-5 text-center">

        <div class="container">
            <ul class="list-group">
                {% for repository in repositories %}
                    <li class="list-group-item">
                        <a href="{{ path('user_single_repositories_controller', {'id': repository.id}) }}">
                            <strong> Full name: {{ repository.full_name }}</strong>
                            <p> Url: {{ repository.html_url }}</p>
                            <p> Owner url: {{ repository.owner.html_url }}</p>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

    </div>
{% endblock %}
